{
  "name": "sidebutton",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:server": "pnpm --filter @sidebutton/server dev",
    "dev:dashboard": "pnpm --filter @sidebutton/dashboard dev",
    "dev:core": "pnpm --filter @sidebutton/core dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "start": "node packages/server/bin/sidebutton.js serve",
    "cli": "node packages/server/bin/sidebutton.js",
    "desktop": "pnpm --filter @sidebutton/desktop start",
    "desktop:build": "pnpm --filter @sidebutton/desktop make"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxsv0/sidebutton.git"
  },
  "license": "Apache-2.0"
}
