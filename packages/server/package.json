{
  "name": "@sidebutton/server",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sidebutton": "./bin/sidebutton.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "bin", "dashboard", "bundles"],
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsup && pnpm run build:dashboard",
    "build:server": "tsup",
    "build:dashboard": "cd ../dashboard && pnpm build && rsync -a --delete dist/ ../server/dashboard/",
    "dev": "node --import tsx --watch-path=./src src/cli.ts serve",
    "dev:build": "tsup --watch",
    "start": "node bin/sidebutton.js serve",
    "test": "vitest run",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@sidebutton/core": "^1.0.0",
    "fastify": "^5.2.0",
    "js-yaml": "^4.1.0",
    "@fastify/static": "^8.0.3",
    "@fastify/websocket": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "commander": "^12.1.0",
    "ws": "^8.18.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
